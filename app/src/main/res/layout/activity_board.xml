<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".Board"
        android:background="@color/bg_green">

    <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Board"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:textAlignment="center"/>

    <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_btn1">

        <Spinner
                android:id="@+id/spinner_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:prompt="@string/prompt_board"
                android:entries="@array/arr_board">
        </Spinner>


    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/txt_recyclerView1"
                android:text="@string/txt_board1"

                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:textColor="@color/txt_green"
                android:fontFamily="@font/baemin_hanna"
                android:background="@drawable/bg_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>

        <TextView
                android:id="@+id/txt_more1"
                android:text="@string/txt_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/txt_green"
                android:fontFamily="@font/baemin_hanna_air"
                android:textAlignment="center"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <TextView
                android:id="@+id/txt_recyclerView2"
                android:text="@string/txt_board2"
                android:paddingVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:textColor="@color/txt_green"
                android:fontFamily="@font/baemin_hanna"
                android:background="@drawable/bg_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>


        <TextView
                android:id="@+id/txt_more2"
                android:text="@string/txt_more"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/txt_green"
                android:fontFamily="@font/baemin_hanna_air"
                android:textAlignment="center"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview2"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>